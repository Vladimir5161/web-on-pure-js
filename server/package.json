        "config": "^3.3.2",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "express": "^4.17.1",
        "firebase-admin": "^11.2.0",
        "webpack": "^5.74.0"
    },
    "devDependencies": {
        "clean-webpack-plugin": "^4.0.0",
        "concurrently": "^5.3.0",
        "html-webpack-plugin": "^5.5.0",
        "nodemon": "^2.0.6",
        "webpack-cli": "^4.10.0"
    }
